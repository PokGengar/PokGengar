{
  "name": "netdevops", // 项目名称
  "version": "0.0.0", // 项目版本号
  "private": true, // 标记为私有项目，防止意外发布到 npm
  "type": "module", // 使用 ES 模块系统
  "scripts": { // npm 脚本命令
    "dev": "vite", // 启动开发服务器
    "build": "run-p type-check \"build-only {@}\" --", // 并行运行类型检查和构建
    "preview": "vite preview", // 预览构建后的项目
    "test:unit": "vitest", // 运行单元测试
    "build-only": "vite build", // 仅构建项目
    "type-check": "vue-tsc --build", // 运行 TypeScript 类型检查
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore", // 使用 oxlint 进行代码检查
    "lint:eslint": "eslint . --fix", // 使用 ESLint 进行代码检查并自动修复
    "lint": "run-s lint:*", // 按顺序运行所有 lint 命令
    "format": "prettier --write src/" // 使用 Prettier 格式化源代码
  },
  "dependencies": { // 生产环境依赖
    "@element-plus/icons-vue": "^2.3.1", // Element Plus 图标库
    "axios": "^1.7.9", // HTTP 客户端
    "element-plus": "^2.9.1", // UI 组件库
    "pinia": "^2.3.0", // Vue 状态管理库
    "vue": "^3.5.13", // Vue.js 核心库
    "vue-router": "^4.5.0" // Vue 路由库
  },
  "devDependencies": { // 开发环境依赖
    "@tsconfig/node18": "^18.2.4", // Node.js 18 的 TypeScript 配置
    "@tsconfig/node22": "^22.0.0", // Node.js 22 的 TypeScript 配置
    "@types/jsdom": "^21.1.7", // JSDOM 的类型定义
    "@types/node": "^22.10.2", // Node.js 的类型定义
    "@vitejs/plugin-vue": "^5.2.1", // Vite 的 Vue 插件
    "@vitejs/plugin-vue-jsx": "^4.1.1", // Vite 的 Vue JSX 插件
    "@vitest/eslint-plugin": "1.1.20", // Vitest 的 ESLint 插件
    "@vue/eslint-config-prettier": "^10.1.0", // Vue 的 Prettier ESLint 配置
    "@vue/eslint-config-typescript": "^14.1.3", // Vue 的 TypeScript ESLint 配置
    "@vue/test-utils": "^2.4.6", // Vue 测试工具
    "@vue/tsconfig": "^0.7.0", // Vue 的 TypeScript 配置
    "eslint": "^9.14.0", // JavaScript 代码检查工具
    "eslint-plugin-oxlint": "^0.11.0", // Oxlint 的 ESLint 插件
    "eslint-plugin-vue": "^9.30.0", // Vue 的 ESLint 插件
    "jsdom": "^25.0.1", // 浏览器环境模拟
    "npm-run-all2": "^7.0.1", // 并行运行多个 npm 脚本的工具
    "oxlint": "^0.11.0", // 快速的 JavaScript/TypeScript linter
    "prettier": "^3.3.3", // 代码格式化工具
    "typescript": "~5.6.3", // TypeScript 编译器
    "vite": "^6.0.5", // 前端构建工具
    "vite-plugin-vue-devtools": "^7.6.8", // Vue 开发工具的 Vite 插件
    "vitest": "^2.1.8", // 基于 Vite 的单元测试框架
    "vue-tsc": "^2.1.10" // Vue 的 TypeScript 编译器
  }
}
